                  .form-group
                    input#address.form-control.form-control-lg(type="text",placeholder="信義路12巷",aria-describedby="helpId")
        .row.mt-5.d-flex.justify-content-end
          .col-md-12
            .negative-margin
                .btn-primary-lighter.text-primary.p-5
                  form
                    .form-row.mb-5
                      .col-6
                        h4 配送方式
                    nav.nav.nav-tabs.nav-pills.nav-fill.mb-5.border
                      a#sendProductMethod-1-tab.nav-item.nav-link.h5.py-3.active(href="#sendProductMethod-1",data-toggle="tab") 超商取貨
                      a#sendProductMethod-2-tab.nav-item.nav-link.h5.py-3(href="#sendProductMethod-2",data-toggle="tab") 宅配
