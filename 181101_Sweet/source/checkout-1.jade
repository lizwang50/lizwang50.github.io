                  tr
                    th.h4.text-right(colspan="4") 總金額
                    td.h4.text-right(colspan="2") NT$ 3,900
        .row
          .col-md-6
            .negative-margin
              .btn-primary-lighter.text-primary.p-5
                form
                  .form-row.mb-5
                    .col-6
                      h4 訂購人資料
                  .form-row
                    .col-6
                      .form-group
                        label.h5(for="lastName") 姓氏
                        input#lastName.form-control.form-control-lg(type="text",placeholder="Lin",aria-describedby="helpId")
                    .col-6
                      .form-group
                        label.h5(for="firstName") 名字
                        input#firstName.form-control.form-control-lg(type="text",placeholder="Mavis",aria-describedby="helpId")
                  .form-row
                    .col-12
                      .form-group
                        label.h5(for="phoneNumber") 電話
                        input#phoneNumber.form-control.form-control-lg(type="text",placeholder="0933-333-333",maria-describedby="helpId")
                  .form-row
                    .col-12
                        .form-group
                          label.h5(for="email") 電子郵件信箱
